#%RAML 1.0
title: Facade API
version: v1
mediaType: application/json
baseUri: https://meta.inn.eu/revault
types:
  TestRequest:
    type: object
    properties:
      mode: string
      resultType: string
      clientIp:
        (x-client-ip):
        type: string
      clientLanguage:
        (x-client-language):
        type: string

  User:
    type: object
    properties:
      fullName: string
      userName: string
      password:
        (deny):
        type: string

annotationTypes:
  x-client-ip:
  x-client-language:
  paged:
  deny:
  rewrite:

/private:
  (deny):

/status:
  /test-service:
    get:
      body:
        type: TestRequest

/users/{userId}:
  get:
    (paged):
    responses:
      200:
        body:
          type: User

  feed:put:
    body:
      application/json:
        type: User

/original-resource:
  (rewrite):
    uri: /rewritten-resource

/original-resource/{arg}:
  (rewrite):
    uri: /rewritten-resource/{arg}

/test-rewrite-method:
  put:
    (rewrite):
      uri: /revault/content/some-service
  feed:put:
    (rewrite):
      uri: /revault/content/some-service

/revault/content/{path:*}:
  uriParameters:
    path:*: string