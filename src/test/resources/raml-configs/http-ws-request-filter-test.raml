#%RAML 1.0
title: Facade API
version: v1
mediaType: application/json
baseUri: https://meta.inn.eu/revault

types:
  Conditional:
    type: object
    properties:
      if?:

  WithUri:
    type: object
    properties:
      uri:

annotationTypes:
  rewrite: [WithUri, Conditional]

/test/{a}:
  (rewrite):
    uri: /rewritten/{a}

/test/{b}:

/test/abc:

/inner-test/{a}:
  (rewrite):
    uri: /inner-rewritten/{a}

/inner-test/{b}:
  (rewrite):
    uri: /inner-rewritten/{b}

/rewritten/{a}:
  (rewrite):
    uri: /rewritten-twice/{a}

/rewritten-twice/{a}:

/inner-rewritten/{a}:

/inner-rewritten/{b}:
