#%RAML 1.0
title: Facade API
version: v1
mediaType: application/json
baseUri: https://meta.inn.eu/revault

types:
  Conditional:
    type: object
    properties:
      if?:

  WithUri:
    type: object
    properties:
      uri:

annotationTypes:
  rewrite: [WithUri, Conditional]

# Event Rewrite Test Resources
/events:
  (rewrite):
    uri: /rewritten-events/root

/events/{path}:
  (rewrite):
    uri: /rewritten-events/root/{path:*}

/events/legacy:

/rewritten-events/{path:*}: