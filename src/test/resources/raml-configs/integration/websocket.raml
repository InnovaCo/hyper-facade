#%RAML 1.0
title: Facade API
version: v1
mediaType: application/json
baseUri: https://meta.inn.eu/revault

types:
  User:
    type: object
    properties:
      fullName: string
      userName: string
      password:
        (deny):
        type: string

  Conditional:
    type: object
    properties:
      if?:

  WithUri:
    type: object
    properties:
      uri:

annotationTypes:
  x-client-ip: nil | Conditional
  x-client-language: nil | Conditional
  deny: nil | Conditional
  rewrite: [WithUri, Conditional]

/resource/reliable-feed:

/resource/unreliable-feed:

/original-resource/{serviceId}:
  (rewrite):
    uri: /rewritten-resource/{serviceId}

/resource:

# Event Rewrite Test Resources
/events:
  (rewrite):
    uri: /rewritten-events/root

/events/{path}:
  feed:put:
    (rewrite):
      uri: /rewritten-events/root/{path}

/rewritten-events/{path:*}:

/users/{userId}:
  get:
    responses:
      200:
        body:
          type: User
  feed:put:
    body:
      application/json:
        type: User