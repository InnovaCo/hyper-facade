#%RAML 1.0
title: Facade API
version: v1
types:
  Status:
    type: object
    properties:
      statusCode: number
      processedBy:
        (private):
        type: string

  StatusRequest:
    type: object
    properties:
      serviceType: string

  TestRequest:
    type: object
    properties:
      mode: string
      resultType: string
      clientIP:
        type: string
        (x-content):
      clientLanguage:
        type: string
        (x-http-header):
          headerName: Accept-Language
annotationTypes:
  x-content:
  x-http-header:
    properties:
      headerName: string
  private:
traits:
  secured:
  paged:
  rateLimited:
  private:
/users:
  is: [ secured ]
  get:
    is: [ paged, rateLimited ]
    body:
      type: StatusRequest
    headers:
      authToken:
    responses:
      200:
        body:
          type: Status
        headers:
          content-type:
/status:
  get:
    is: [ rateLimited ]
  /test-service:
    get:
      is: [ paged ]
      body:
        type: TestRequest
      headers:
        authToken:
      responses:
        200:
          body:
            type: Status
          headers:
            content-type:
        404:
          body:
            type: string
/private:
  is: [ private ]