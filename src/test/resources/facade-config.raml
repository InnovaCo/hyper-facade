#%RAML 1.0
title: Facade API
version: v1
types:
  Status:
    type: object
    properties:
      statusCode: number
      processedBy:
        (privateField):
        type: string

  StatusRequest:
    type: object
    properties:
      serviceType: string

  TestRequest:
    type: object
    properties:
      mode: string
      resultType: string
      clientIP:
        (x-client-ip):
        type: string
      clientLanguage:
        (x-client-language):
        type: string
annotationTypes:
  x-client-ip:
  x-client-language:
  privateField:
traits:
  secured:
  paged:
  rateLimited:
  privateResource:
/users:
  is: [ secured ]
  get:
    is: [ paged, rateLimited ]
    body:
      type: StatusRequest
    headers:
      authToken:
    responses:
      200:
        body:
          type: Status
        headers:
          content-type:
/status:
  get:
    is: [ rateLimited ]
  /test-service:
    get:
      is: [ paged ]
      body:
        type: TestRequest
      headers:
        authToken:
      responses:
        200:
          body:
            type: Status
          headers:
            content-type:
        404:
          body:
            type: string
/private:
  is: [ privateResource ]